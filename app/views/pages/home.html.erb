<div class="home-container">
  <div class="row">
    <div class="col-md-9">
      <% @posts.each do |post| %>
        <%= link_to post_path(post) do %>
          <div class="post-preview">
            <h3><%= post.title %></h3>
            <p><%= post.callout %></p>
            <div class="post-content">
              <%= post.content %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-3">
      <% @drops.each do |drop| %>
        <div class="drop-preview">
          <h3><%= drop.title %></h3>
          <p><%= drop.description %></p>
        </div>
        <hr>
      <% end %>
    </div>
  </div>
</div>

<h1><%= @post.title %></h1>

<p><%= @post.content %></p>



<h2>Comments</h2>

<ul>
  <% @post.comments.each do |comment| %>
    <li>
      <%= comment.content %>
    </li>
  <% end %>
</ul>

<%= link_to "Edit", edit_post_path(@post) %> |
<%= link_to "Back", posts_path %>
<%= link_to 'Delete', posts_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
